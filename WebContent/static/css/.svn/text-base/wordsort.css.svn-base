
.userList {
	overflow: auto;
	height:200px;
}

a.s {
	border: solid 1px #999999;
	text-decoration: none;
	text-align: center;
	margin-bottom: .3em;
	background-color: white;
	cursor: move;
}

.draggedUser {
	zoom: 1;
	opacity: .2;
	-moz-opacity: .2;
	filter: alpha(opacity=20)
}



#importantWords:hover {
	background-color: #ccffcc;
}

#allWords:hover {
	background-color: #ffffcc;	
}


#removedWords:hover {
	background-color: #ffcccc;
}

#ignoredWords:hover {
	background-color: #ffcccc;
}



div.help {
	visibility: hidden;	
}

div.showHelp {
	visibility: visible;	
}